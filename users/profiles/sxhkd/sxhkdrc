# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty

# program launcher
super + space
    rofi -show drun

super + d
    rofi -show run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {0-9}
    berryc switch_workspace {0-9}

super + shift + {0-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super + p
    berryc snap_right

super + o
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus
      && berryc window_raise

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus

super + ctrl + alt + q
    berryc quit

super + alt + {h, j, k, l}
    berryc cardinal_focus {1, 2, 3, 4}
      && berryc window_raise

XF86AudioRaiseVolume
    pamixer -i 2

XF86AudioLowerVolume
    pamixer -d 2

XF86AudioMute
    pamixer -t
